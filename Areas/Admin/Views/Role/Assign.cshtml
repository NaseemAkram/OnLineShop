@model OnLineShop.Areas.Admin.Models.RoleUserVm
@{
    ViewData["Title"] = "Assign";
}






<h1 class="text-info">Assign Role to User</h1>
<br />


<div>
    <form method="post" action="Assign" enctype="multipart/form-data">
        <div class="p-4 rounded-circle">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <h3 class="text-danger">@ViewBag.msg</h3>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserId"></label>
                </div>
                <div>
                    <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
                </div>
                 <span asp-validation-for="UserId"  class="text-danger"></span>
            </div>
            <br />


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="RoleId"></label>
                </div>
                <div>
                    <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
                </div>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <br />


            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Assign" />
                <a class="btn btn-dark" asp-action="Index">Back</a>
            </div>

        </div>
    </form>
</div>


