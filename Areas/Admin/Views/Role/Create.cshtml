@{
    ViewData["Title"] = "Roles";
}
<h1 class="text-info">Roles</h1>
<br />
<div>
    <form method="post" action="Create" id="role-form" enctype="multipart/form-data">
        <div class="p-4 rounded-circle">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <h3 class="text-danger">@ViewBag.msg</h3>

            <div class="form-group row">
                <div class="col-2">
                    <label>Role Name</label>
                </div>
                <div>
                    <input id="name" name="name" required value="@ViewBag.name" class="form-control" />
                </div>
                
            </div>

            <br />
       <div class="form-group">
                <input type="submit" class="btn btn-primary" value="save" />
                <a class="btn btn-dark" asp-action="Index">Back</a>
            </div>

        </div>
    </form>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        $(document).ready(function () {

            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },

                    PasswordHash: {
                        required: true,
                    },

                    messages: {
                        UserName: "Please enter user name",
                        PasswordHash: "Please enter password"
                    }
                }
            });

        });

    </script>

    }

