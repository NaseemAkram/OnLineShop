@model IEnumerable<OnLineShop.Models.Products>
@{
    ViewData["Title"] = "Index";
}

<div class="row  offset-2">
    <div class="col-6 ">
        <h1 class="text-primary">Product List</h1>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Product">
            &nbsp; Add New Product
        </a>
    </div>
</div>

<hr />

<form method="post">
    <div class="row">
        <div class="col-2 offset-2"><input type="number" class="form-control" name="lowamount" /> </div>
        <div class="col-2 offset-2"><input type="number" class="form-control" name="highamount" /> </div>
        <div class="col-2 offset-2"><input type="submit" value="Search" class="btn btn-primary" /> </div>
       

    </div>
</form>


<div class="offset-2">
    <table class="table table-striped table-hover" id="myTable">
        <thead class="table-info">
           <tr>
               <th>@Html.DisplayNameFor(n=>n.Name)</th>
                <th>@Html.DisplayNameFor(n=>n.Price)</th>
                <th>@Html.DisplayNameFor(n=>n.ProductColor)</th>
                <th>@Html.DisplayNameFor(n=>n.IsAvailable)</th>
               @* <th>@Html.DisplayNameFor(n=>n.ProductTypes)</th>*@
                <th>@Html.DisplayNameFor(n=>n.ProductTypeId)</th>


               <th></th>
           </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductColor</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.ProductTypes.ProductType</td>
                <td>
                        
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id"><i class="bi bi-trash3"></i> &nbsp; Delete</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                            </a>
                        <a class="btn btn-info" asp-action="Details" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i> &nbsp;  Details
                            </a>
                        
                </td>

                </tr>
            }
            
        </tbody>
    </table>
</div>

@section scripts{


    <script type="text/javascript">
        
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    
    </script>
}