@model OnLineShop.Models.Products
@{
    ViewData["Title"] = "Create";
}






<h1 class="text-info">Edit Product</h1>
<br />


<div>
    <form method="post" action="Edit" enctype="multipart/form-data">
      
        <div class="p-4 rounded-circle">
             <input type="hidden"  asp-for="Id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br />


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ProductColor" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Image" class="form-control" type="file" />
                </div>
                @*<span asp-validation-for="Image" class="text-danger"></span>*@
            </div>
            <br />


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-6">
                    <input asp-for="IsAvailable" type="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <br />


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-6">
                    <select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypes" class="form-control"></select>
                </div>
                @* <span asp-validation-for="ProductTypeId"  class="text-danger"></span>*@
            </div>
            <br />


            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a class="btn btn-dark" asp-action="Index">Back</a>
            </div>
            
                <div class="col-4">
                    <img src="~/@Model.Image" width="100%" />
                </div>
           
            
        </div>
    </form>
</div>


