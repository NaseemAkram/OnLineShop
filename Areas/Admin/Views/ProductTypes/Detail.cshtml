@model OnLineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-info">Details Product Types</h1>
<br />


<div>
    <form method="post" action="Detail">
        <div class="p-4 rounded-circle">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductType"></label>
                </div>
                <div>
                    <input asp-for="ProductType" readonly class="form-control" />
                </div>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                
                <a class="btn btn-dark" asp-action="Index">Back</a>
                <a asp-action="Edit" class="btn btn-primary" asp-controller="ProductTypes" asp-area="Admin" asp-route-id="@Model.Id ">Edit</a>
               
            </div>
        </div>
    </form>
</div>

