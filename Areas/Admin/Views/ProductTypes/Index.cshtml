@model IEnumerable<OnLineShop.Models.ProductTypes>

<br />
<br />

<div class="offset-2">

    @if (ViewBag.Isuccess)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>Congratulation!</strong> Product Types has been created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

</div>



<div class="row  offset-2">
    <div class="col-6 ">
        <h1 class="text-primary">Product Type List</h1>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Create" asp-controller="ProductTypes">
            &nbsp; Add New Product Type
        </a>
    </div>
</div>


<br />

<div class="offset-2">
    <table class="table table-striped table-hover">
        <thead class="table-info ">
          
            <tr>
                <th>@Html.DisplayNameFor(n=>n.ProductType)</th>
               <th></th>
            </tr>
        </thead>
        <tbody >
             @foreach (var item in Model)
                {
            <tr>
               
                    <td>@item.ProductType</td>
                    
                        <partial name="_ButtonPartial" model="@item.Id"></partial>
                    
                        
               
            </tr>
            }
        </tbody>
    </table>
</div>


