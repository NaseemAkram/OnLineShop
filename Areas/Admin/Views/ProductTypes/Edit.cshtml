@model OnLineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-info">Edit Product Types</h1>
<br />


<div>
    <form method="post" action="Edit">
        <div class="p-4 rounded-circle">
            <input type="hidden"  asp-for="Id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductType"></label>
                </div>
                <div>
                    <input asp-for="ProductType" class="form-control" />
                </div>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a class="btn btn-dark" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>

