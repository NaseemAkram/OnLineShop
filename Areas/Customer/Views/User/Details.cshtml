@model OnLineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Details";
}






<h1 class="text-info ">User Details</h1>
<br />


<div>
    <form method="" action="Edit" id="user-form" enctype="multipart/form-data">
        <div class="p-4 rounded-circle">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <h3 class="text-danger">@ViewBag.message</h3>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserName"></label>
                </div>
                <div>
                    <input asp-for="UserName" class="form-control" readonly />
                </div>
            </div>
            <br />


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="FirstName"></label>
                </div>
                <div>
                    <input asp-for="FirstName" class="form-control"  readonly/>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="LastName"></label>
                </div>
                <div>
                    <input asp-for="LastName" class="form-control" readonly />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div>
            <br />


            <div class="form-group">
               @* <input type="submit" class="btn btn-primary" value="save" />*@
                <a class="btn btn-dark" asp-action="Index">Back</a>
            </div>

        </div>
    </form>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        $(document).ready(function () {

            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },

                    PasswordHash: {
                        required: true,
                    },

                    messages: {
                        UserName: "Please enter user name",
                        PasswordHash: "Please enter password"
                    }
                }
            });

        });

    </script>

    }


