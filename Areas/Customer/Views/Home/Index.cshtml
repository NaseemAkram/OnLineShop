@using OnLineShop.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Products>

@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />

<div class="row">
    @foreach(var products in Model)
    {
        <div class="col-4">

            <div class="card mb-4">

                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px; color:steelblue">@products.Name</label>
                    </h4>
                 </div>

                 <img src="~/@products.Image" alt="Card Image" class="card-img-top" style="height:300px;"/>

                 <div class="card-header">
                     <div class="d-flex justify-content-between align-items-center">
                         <div class="btn-group">
                             <label style="font-size20px; color:brown"><b>Price: @products.Price</b></label>
                         </div>
                         <a class="btn btn-success" asp-action="Details" asp-controller="Home" asp-route-id="@products.Id">Details</a>
                     </div>
                 </div>

            </div>

        </div>
    }
</div>


@*//Pagination section*@

<div class="text-end">
    @Html.PagedListPager(Model, c=>Href("~/Customer/Home/Index?page="+c),X.PagedList.Web.Common.PagedListRenderOptions.PageNumbersOnly);
</div>