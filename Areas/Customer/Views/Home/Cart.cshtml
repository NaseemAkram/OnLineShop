@model List<OnLineShop.Models.Products>
@{
    ViewData["Title"] = "Cart";
}

<h1 class="text-info align-content-between">Your Cart Details</h1>
<hr />
<div class="row ">
    <table class="table table-bordered table-hover">
        <thead class="table-info">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Product Type</th>
                <th>Color</th>
                <th></th>



            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                <td>
                    <img src="~/@item.Image" style="width:200px; height:150px"/>
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.ProductTypes.ProductType</td>
                <td>@item.ProductColor</td>
                <td>
                        <a class="btn btn-danger " asp-action="Remove" asp-controller="Home" asp-area="Customer" asp-route-id="@item.Id"><i class="bi bi-trash3"></i>Remove</a>
                </td>
            </tr>       
            }
         
        </tbody>
    </table>
</div>


<div class="row">
    <div class="col-6">
        <a class="btn btn-primary" asp-action="Index" asp-controller="Home" asp-area="Customer">Back to Home</a>
    </div>
    <div class="col-6 float-end">
        <h2>Total Amount</h2>
        <h2>Grant Total: @Model.Sum(p=>p.Price)</h2>
        <a class="btn btn-info" asp-area="Customer" asp-action="CheckOut" asp-controller="Order">Process to CheckOut</a>
    </div>
</div>
